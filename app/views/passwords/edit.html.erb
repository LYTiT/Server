<div class="container-fluid splash_login">
  <div class="row">
    <div class="col-xs-1 col-sm-3 col-lg-3">&nbsp;</div>
    <div class="col-xs-10 col-sm-6 col-lg-6">
      <%= image_tag "lytit_icon.png", class: "center-block"  %>
      <div class="center-block">
        <div class="tnc">
          <p><b><%= t '.title' %></b></p>
          <p>Please enter your new password below</p>
        </div>
        <%= form_for :password_reset, :url => user_password_path(@user, :token => @user.confirmation_token), :html => { :method => :put, :class => "login after" } do |form| %>
          <% if flash[:notice].present? %>
            <div class="alert alert-danger"><%= flash[:notice] %></div>
          <% end %>
          <%= form.password_field :password, class: "form-control", placeholder: "Set Password", autocomplete: "off" %>
          <div class="sign_in_button">
            <%= form.submit value: "Save this password" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-1 col-sm-3 col-lg-3">&nbsp;</div>
  </div>
</div>
