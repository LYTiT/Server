<% content_for :body do %>
<body id='home'>
   <% end %>
   <div class="home-container edit-password">
      <header class="cd-header-home">
         <a href="/"><img id="logo" src="/assets/lytit-logotype.svg" style="width: 130px;" alt="LYTiT"></a>
         <a href="#0" class="cd-3d-nav-trigger-home">
         Menu
         <span></span>
         </a>
      </header>
      <!-- .cd-header -->
      <div class="edit-password-title">
         <p id="change-password"><b><%= t '.title' %></b></p>
         <p><%= t '.description' %></p>
      </div>
      <br />
      <%= form_for :password, :url => passwords_path, :html => { :class => "login after" } do |form| %>
        <% if flash[:notice].present? %>
          <div class="alert alert-danger"><%= flash[:notice] %></div>
        <% end %>
        <%= form.text_field :email, type: 'email', class: "form-control", placeholder: "Email Address", autocomplete: "off" %>
        <div class="sign_in_button">
          <%= form.submit value: "Reset Password" %>
        </div>
      <% end %>
      <footer class="footer-basic-centered">
         <p class="footer-links">
            <a><%= link_to "Privacy", privacy_path %></a>
            ·
            <a><%= link_to "Terms", tnc_path %></a>
            ·
            <a href="mailto:support@lytit.com">Support</a>
            ·
            <a href="mailto:lux@lytit.com">Contact</a>
         </p>
         <p class="footer-company-name">LYTiT, inc. &copy; 2015</p>
      </footer>
   </div>
   <nav class="cd-3d-nav-container">
      <ul class="cd-3d-nav cd-blue">
